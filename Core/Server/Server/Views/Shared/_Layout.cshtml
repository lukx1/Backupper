<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	@Styles.Render("~/Content/css")
	<title>@ViewBag.Title</title>
</head>

<body>
	<nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
		<div class="navbar-nav">
			@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link nav-item" })
			@Html.ActionLink("API", "Index", "Help", new { area = "" }, new { @class = "nav-link nav-item" })
			@Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { @class = "nav-link nav-item" })
		</div>
	</nav>
<img src="~/Images/oldManUnderConstruction.gif" style="float:left"/>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Backupper</p>
		</footer>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jquery_validate")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
