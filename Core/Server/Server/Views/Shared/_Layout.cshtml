<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @Styles.Render("~/Content/css")
    <title>@ViewBag.Title</title>
</head>

<body>
<nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
	<div class="container">
		<div class="flex-column ml-lg-0 ml-3">
			<ul class="navbar-nav">
				<li class="nav-item">
					@Html.ActionLink("Home", "Index", "Home", null, new {@class = "nav-link"})
				</li>
				<li class="nav-item">
					@Html.ActionLink("API", "Index", "Help", null, new {@class = "nav-link"})
				</li>
				<li class="nav-item">
					@Html.ActionLink("Admin", "Index", "Admin", null, new {@class = "nav-link"})
				</li>
			</ul>

			@if (ViewBag.IsUserLoggedIn ?? false)
			{
				@Html.Partial("~/Views/Shared/_AdminNavBarPart.cshtml")
				;
			}
		</div>
	</div>
</nav>
	<div class="container">
	    @RenderBody()
		
		<footer>
			<p>&copy; @DateTime.Now.Year - Backupper</p>
		</footer>
	</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery_validate")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection(name: "scripts", required: false)
</body>
</html>
