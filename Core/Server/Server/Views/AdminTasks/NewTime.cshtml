@model global::Server.Models.Time

@{
    ViewBag.Title = "New Time";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    Html.LabelFor(x => x.Name);
    Html.TextBoxFor(x => x.Name);
    Html.LabelFor(x => x.Interval);
    Html.TextBoxFor(x => x.Interval);
    Html.LabelFor(x => x.Repeat);
    Html.CheckBoxFor(x => x.Repeat);
    Html.LabelFor(x => x.StartTime);
    Html.EditorFor(x => x.StartTime);
    Html.LabelFor(x => x.EndTime);
    Html.EditorFor(x => x.EndTime);

    <input type="submit" value="Confirm" />
    <input type="reset" value="Clear"/>
}