@model global::Server.Models.TaskLocation

@{
    ViewBag.Title = "New Task Location";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    Html.LabelFor(x => x.IdTask);
    Html.TextBoxFor(x => x.IdTask);
    Html.LabelFor(x => x.IdSource);
    Html.TextBoxFor(x => x.IdSource);
    Html.LabelFor(x => x.IdDestination);
    Html.TextBoxFor(x => x.IdDestination);
    <!--TODO: Change into drop down list-->
    Html.LabelFor(x => x.IdBackupTypes);
    Html.TextBoxFor(x => x.IdBackupTypes);

    <input type="submit" value="Confirm" />
    <input type="reset" value="Clear" />
}