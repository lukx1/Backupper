@model global::Server.Models.LocationCredential

@{
    ViewBag.Title = "New Location Credentials";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    Html.LabelFor(x => x.Host);
    Html.TextBoxFor(x => x.Host);
    Html.LabelFor(x => x.Port);
    Html.TextBoxFor(x => x.Port);
    <!--TODO: Change into drop down list-->
    Html.LabelFor(x => x.IdLogonType);
    Html.TextBoxFor(x => x.IdLogonType);
    Html.LabelFor(x => x.Username);
    Html.TextBoxFor(x => x.Username);
    Html.LabelFor(x => x.Password);
    Html.PasswordFor(x => x.Password);

    <input type="submit" value="Confirm" />
    <input type="reset" value="Clear" />
}